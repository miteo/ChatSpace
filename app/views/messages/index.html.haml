= render "notification"
= render "devise/shared/side_bar"

.chat-main
  .chat-main__header
    .chat-main__header--group
      .chat-main__header--group-name
        グループネーム１
      .chat-main__header--group-edit-btn
        edit
      .chat-main__header-members
        MEMBER: miteo

  .chat-main__body
    .chat-main__body--massage-list
    = render "massage"

  .chat-main__footer
    %form{class: "chat-main__footer-form", id: "new_message", method: "post"}
      .chat-main__footer-body
        %input{placeholder: "type a message",class: "input_message", type: "text", id: "message_body"}
          %label.chat-file
            = fa_icon "image"
        %input{class: "submit", type:"submit", value: "send"}
